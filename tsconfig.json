{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}